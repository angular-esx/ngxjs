{
  "name": "ngxjs",
  "version": "1.0.0",
  "license": "MIT",
  "envts": {
    "webpack_config": "./_configs/webpack/index.ts",
    "webpack_dll_config": "./_configs/webpack/index.dll.ts",
    "universal_server": "./_dist/development/server.js"
  },
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "rimraf ./packages/*/node_modules && lerna bootstrap",
    "clear-complied": "rimraf ./_compiled",
    "build-dll": "npm run clear-complied && cross-env BUILD_ENV=development webpack --config $npm_package_envts_webpack_dll_config --progress",
    "build": "npm run build-dll && cross-env BUILD_ENV=development webpack --config $npm_package_envts_webpack_config --progress && npm run clear-complied",
    "build:universal:browser": "npm run clear-complied && cross-env BUILD_ENV=universal:browser webpack --config $npm_package_envts_webpack_config --progress && npm run clear-complied",
    "build:universal:server": "npm run clear-complied && cross-env BUILD_ENV=universal:server webpack --config $npm_package_envts_webpack_config --progress && npm run clear-complied",
    "start": "npm run build-dll && cross-env BUILD_ENV=development:dashboard webpack-dashboard -- webpack-dev-server --config $npm_package_envts_webpack_config --hotOnly --color --progress && npm run clear-complied",
    "start:aot": "npm run build-dll && cross-env BUILD_ENV=development:aot webpack --config $npm_package_envts_webpack_config --progress &&  npm run lite-server && npm run clear-complied",
    "start:universal": "npm run build:universal:browser && npm run build:universal:server && node $npm_package_envts_universal_server && npm run clear-complied",
    "lite-server": "lite-server -c ./_configs/lite-server/lite-server.js",
    "lint-staged": "lint-staged",
    "test": "cross-env BUILD_ENV=testing karma start",
    "test:custom": "cross-env BUILD_ENV=testing:custom karma start"
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "@angular/animations": "4.4.4",
    "@angular/common": "4.4.4",
    "@angular/compiler": "4.4.4",
    "@angular/core": "4.4.4",
    "@angular/forms": "4.4.4",
    "@angular/http": "4.4.4",
    "@angular/platform-browser": "4.4.4",
    "@angular/platform-browser-dynamic": "4.4.4",
    "@angular/router": "4.4.4",
    "core-js": "2.5.1",
    "rxjs": "5.4.3",
    "typescript": "2.5.2",
    "zone.js": "0.8.5"
  },
