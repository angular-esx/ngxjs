{
  "name": "ngxjs",
  "version": "1.0.0",
  "license": "MIT",
  "envts": {
    "webpack_config": "./_configs/_webpack/index.ts",
    "webpack_dll_config": "./_configs/_webpack/index.dll.ts",
    "universal_server": "./_dist/development/server.js"
  },
  "scripts": {
    "build-dll": "cross-env BUILD_ENV=development webpack --config $npm_package_envts_webpack_dll_config --progress",
    "build": "npm run build-dll && cross-env BUILD_ENV=development webpack --config $npm_package_envts_webpack_config --progress",
    "build:universal:browser": "cross-env BUILD_ENV=universal:browser webpack --config $npm_package_envts_webpack_config --progress",
    "build:universal:server": "cross-env BUILD_ENV=universal:server webpack --config $npm_package_envts_webpack_config --progress",
    "start": "npm run build-dll && cross-env BUILD_ENV=development webpack-dev-server --config $npm_package_envts_webpack_config --hot --inline --open",
    "start:dashboard": "npm run build-dll && cross-env BUILD_ENV=development:dashboard webpack-dashboard -- webpack-dev-server --config $npm_package_envts_webpack_config --hot --inline --open",
    "start:aot": "npm run build-dll && cross-env BUILD_ENV=aot webpack-dev-server --config $npm_package_envts_webpack_config --hot --inline --open",
    "start:universal": "npm run build:universal:browser && npm run build:universal:server && node $npm_package_envts_universal_server",
    "lint-staged": "lint-staged",
    "test": "cross-env BUILD_ENV=testing karma start",
    "test:custom": "cross-env BUILD_ENV=testing:custom karma start"
  },
  "pre-commit": "lint-staged",
  "dependencies": {
    "@angular/animations": "4.0.1",
    "@angular/common": "4.0.1",
    "@angular/compiler": "4.0.1",
    "@angular/core": "4.0.1",
    "@angular/forms": "4.0.1",
    "@angular/http": "4.0.1",
    "@angular/platform-browser": "4.0.1",
    "@angular/platform-browser-dynamic": "4.0.1",
    "@angular/router": "4.0.1",
    "core-js": "2.4.1",
    "rxjs": "5.2.0",
    "typescript": "2.4.1",
    "zone.js": "0.8.5"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@angular/compiler-cli": "4.0.1",
    "@angular/platform-server": "4.0.1",
    "@angularclass/hmr": "1.2.2",
    "@angularclass/hmr-loader": "3.0.2",
    "@ngtools/webpack": "1.6.0",
    "@ngx-universal/express-engine": "0.4.0-beta.1",
    "@ngx-universal/state-transfer": "0.4.0-beta.1",
    "@types/copy-webpack-plugin": "4.0.0",
    "@types/html-webpack-plugin": "2.11.3",
    "@types/jasmine": "2.5.53",
    "@types/node": "7.0.0",
    "@types/webpack": "2.2.14",
    "@types/webpack-merge": "0.0.4",
    "add-asset-html-webpack-plugin": "1.0.2",
    "autoprefixer": "6.5.4",
    "clean-webpack-plugin": "0.1.14",
    "codelyzer": "2.0.0",
    "compression": "1.7.0",
    "copy-webpack-plugin": "4.0.1",
    "cross-env": "3.1.3",
    "css-loader": "0.26.1",
    "express": "4.15.4",
    "handlebars": "4.0.6",
    "handlebars-loader": "1.4.0",
    "html-webpack-plugin": "2.24.1",
    "jasmine": "2.7.0",
    "karma": "1.7.0",
    "karma-browserstack-launcher": "1.3.0",
    "karma-chrome-launcher": "2.2.0",
    "karma-jasmine": "1.1.0",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "2.0.4",
    "lint-staged": "3.2.5",
    "ngx-template-loader": "0.0.1",
    "node-sass": "4.0.0",
    "postcss-loader": "1.2.1",
    "pre-commit": "1.2.2",
    "raw-loader": "0.5.1",
    "sass-loader": "4.1.0",
    "style-loader": "0.13.1",
    "stylelint": "7.7.0",
    "stylelint-scss": "1.4.1",
    "to-string-loader": "1.1.5",
    "ts-loader": "2.2.2",
    "ts-node": "3.2.0",
