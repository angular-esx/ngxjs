{
  "compilerOptions": {
    "declaration": true,
    "stripInternal": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2015", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,
    "typeRoots" : [
      "./node_modules/@types",
      "./packages/infrastructure/types"
    ]
  },
  "include": [
    "packages/application",
    "packages/core",
    "packages/infrastructure"
  ],
  "exclude": [
    "node_modules",
    "packages/application/node_modules",
    "packages/core/node_modules"
  ]
}
