{
  "compilerOptions": {
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es2015",
    "lib": ["es2015", "dom"],
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "typeRoots" : ["./node_modules/@types", "./packages/infrastructure/types"],
    "baseUrl": ".",
    "paths": {
      "ngx-application": ["./packages/application"],
      "ngx-core": ["./packages/core"],
      "ngx-infrastructure": ["./packages/infrastructure"]
    },
    "noEmit": true,
    "noEmitHelpers": true,
    "importHelpers": true
  },
  "include": [
    "packages/application",
    "packages/core",
    "packages/infrastructure"
  ],
  "exclude": [
    "node_modules",
    "packages/application/node_modules",
    "packages/core/node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./_compiled",
    "skipMetadataEmit": true
  }
}
